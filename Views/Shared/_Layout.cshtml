<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ryewood Residents</title>
    <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" />
    
    <script
  src="https://code.jquery.com/jquery-3.7.0.min.js"
  integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g="
  crossorigin="anonymous"></script>

    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/RyewoodResidents.styles.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/css/mdb.min.css")" />
     <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <!-- Google Fonts Roboto -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap"
    />
</head>
<body style="background-color: #FFFFFF;">
   <header id="home">
        <nav style="background-color: #FFFFFF;color:black;padding-bottom:0px" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom text-light box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family:Arial Black; padding-left:25px;font-size:24px">Ryewood</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div style="padding-right: 35px;" class="navbar-collapse collapse d-sm-flex justify-content-end"> <!-- Modified class -->
                    <ul class="navbar-nav" >
                        <li class="nav-item ml-auto" > <!-- Added class -->
                            <button class="headerButton" onclick="javascript:document.location='#home'">Home</button>
                            <!--<a class="nav-link"  asp-area="" asp-controller="Home" asp-action="Index">Home</a>-->
                        </li>
                        <li class="nav-item ml-auto" style="padding-left:15px"> <!-- Added class -->
                            <button class="headerButton" onclick="javascript:document.location='#news'">News</button>
                        </li>
                        <li class="nav-item" style="padding-left:15px">
                            <button class="headerButton" onclick="javascript:document.location='#contact'">Contact</button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main" style="height: 1750px;"  >
            @RenderBody()
        </main>
    </div>

   

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
     <!-- MDB -->
    <script type="text/javascript" src="@Url.Content("~/js/mdb.min.js")" ></script>

    <link rel="stylesheet" href="~/font-awesome-4.7.0/css/font-awesome.min.css">
    <!-- Custom scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>

  .footer {
    text-align: left;
    font-size: 14px;
    background-color: #ffffff;
    border-bottom-style: dashed;
    border-bottom-width: 1px;
    border-top-style: dashed;
    border-top-width: 1px;
    font-family: Lato Black;
    height: 65px;
    color: #989898;
  }

    .form-control {
        border:1px solid #E0E0E0;
        margin-top: 5px; 
        border-radius: 0px;  
        font-family: Roboto;
        
    }
    .headerButton {
        color:black !important;
        font-family: Arial;
        letter-spacing: 5px;
        font-weight: bold;
        background-color: #FFFFFF;
        padding-left: 12px;
        padding-right: 8px;
        padding-top: 1px;
        padding-bottom: 1px;
        margin-top: 5px;
        border-width: 1px;

    }
    .navbar-light .navbar-brand {
        color: black !important;
    }
    .navbar {
        height: 75px;
        border-bottom: 0px !important;
    }
    .header-button {
        border-style: 1px black;
    }
    .nav-link {
        color:black !important;
        font-family: Arial;
        letter-spacing: 5px;
        font-weight: bold;

    }

    
</style>